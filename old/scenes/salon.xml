<yas>
    <scene root = "GreatHall" axis_length = "7" />

    <views default = "defaultView">
        <perspective id = "defaultPerspective" near = "10" far = "20" angle = "30">
            <from x = "1" y = "3" z = "5"/>
            <to x = "2" y = "4" z = "6"/>
        </perspective>  

         <ortho id = "defaultOrtho" near = "10" far = "20" left = "5" right = "15" top = "25" bottom = "0" />
    </views>

    <ambient>
        <ambient r = "0.1" g = "0.1" b = "0.1" a = "1" />
        <background r = "0.8" g = "0.3" b = "0.9" a = "1" />
    </ambient>  

    <lights>
        <omni id = "omniDefault" enabled = "1">
            <location x = "0" y = "1" z = "3" w = "4" />
            <ambient r = "0" g = "1" b = "7" a = "4" />
            <diffuse r = "10" g = "1" b = "3" a = "4" />
            <specular r = "0" g = "11" b = "3" a = "4" />
        </omni>
    </lights>

    <textures>
        <texture id = "defaultTexture" file = "swag.jpeg" /> 
    </textures>

    <materials>
        <material id = "default" shininess = "100">
            <emission r = "0.5" g = "0.5" b = "0.5" a = "0.5" />
            <ambient r = "0.5" g = "0.5" b = "0.5" a = "0.5" />
            <diffuse r = "0.5" g = "0.5" b = "0.5" a = "0.5" />
            <specular r = "0.5" g = "0.5" b = "0.5" a = "0.5" />
        </material>

        <material id = "material2" shininess = "50">
            <emission r = "0" g = "1" b = "1" a = "1" />
            <ambient r = "0" g = "0.1" b = "0.2" a = "0.5" />
            <diffuse r = "0" g = "0.2" b = "0.2" a = "0.3" />
            <specular r = "0" g = "1" b = "0.2" a = "0.9" />
        </material>
    </materials>

    <!--  TRANSFORMATIONS TAG  -->
    <transformations>

        <!-- Matrix Identity -->
        <transformation id = "Identity">
            <scale x = "1" y = "1" z = "1" />
        </transformation>

        <!-- Transformations Matrixes to apply to Unitary Cube's faces -->

        <!-- Front face -->
        <transformation id = "FrontFaceTransformation">
            <translate x = "0" y = "0" z ="0.5" />
        </transformation>

        <!-- Right face -->
        <transformation id = "RightFaceTransformation">
            <translate x = "0.5" y = "0" z ="0" />
            <rotate axis = "y" angle = "90" />
        </transformation>

        <!-- Up face -->
        <transformation id = "UpFaceTransformation">
            <translate x = "0" y = "0.5" z ="0" />
            <rotate axis = "x" angle = "-90" />
        </transformation>


        <!-- Left face -->
        <transformation id = "LeftFaceTransformation">
            <translate x = "-0.5" y = "0" z ="0" />
            <rotate axis = "y" angle = "-90" />
        </transformation>

        <!-- Back face -->
        <transformation id = "BackFaceTransformation">
            <rotate axis = "y" angle = "180" />
            <translate x = "0" y = "0" z ="0.5" />
        </transformation>
        

        <!-- Down face -->
        <transformation id = "DownFaceTransformation">
            <translate x = "0" y = "-0.5" z ="0" />
            <rotate axis = "x" angle = "90" />   
        </transformation>

        <!-- Transformations Matrixes to apply to Table's Elements -->

        <!-- Top -->
        <transformation id = "TopTransformation">
            <translate x = "0" y = "2.5" z = "0" />
            <scale x = "5" y = "0.1" z = "15" />
        </transformation>

        <!-- LegBody -->
        <transformation id = "LegBodyTransformation">
            <translate x = "0" y = "1.25" z = "0" />
            <scale x = "1.3" y = "2.5" z = "1.3" />
        </transformation>

        <!-- LegBase -->
        <transformation id = "LegBaseTransformation">
            <translate x = "0" y = "0.5" z = "0" />
            <scale x = "1.6" y = "1" z = "1.6" />
        </transformation>

        <!-- FrontLeg -->
        <transformation id = "FrontLegTransformation">
            <translate x = "0" y = "0" z = "4.5" />
        </transformation>
        
        <!-- BackLeg -->
        <transformation id = "BackLegTransformation">
            <translate x = "0" y = "0" z = "-4.5" />
        </transformation>

        <!-- Beam -->
        <transformation id = "BeamTransformation">
            <translate x = "0" y = "0.5" z = "0" />
            <scale x = "0.4" y = "1" z = "9" />
        </transformation>

        <!--Front Table -->
        <transformation id = "FrontTableTransformation">
            <translate x = "0" y = "0" z = "15" />
        </transformation>

        <!-- Back Table -->
        <transformation id = "BackTableTransformation">
            <translate x = "0" y = "0" z = "-15" />
        </transformation>

        <!-- Transformations Matrixes to apply to Teams' Tables -->

        <!-- Gryffindor Table -->
        <transformation id = "GryffindorTableTransformation">
            <translate x = "5" y = "0" z = "0" />
        </transformation>

        <!-- Slytherin Table -->
        <transformation id = "SlytherinTableTransformation">
            <translate x = "-15" y = "0" z = "0" />
        </transformation>

        <!-- Ravenclaw Table -->
        <transformation id = "RavenclawTableTransformation">
            <translate x = "-5" y = "0" z = "0" />
        </transformation>

        <!-- Hufflepuff Table -->
        <transformation id = "HufflepuffTableTransformation">
            <translate x = "15" y = "0" z = "0" />
        </transformation>

        <!-- Transformations Matrixes to apply to Candle's Elements -->

        <!-- CandleBody -->
        <transformation id = "CandleBodyTransformation">
            <rotate axis = "x" angle ="-90" />
        </transformation>

        <!-- CandleFireTop -->
        <transformation id = "CandleFireTopTransformation">
            <rotate axis = "x" angle ="-90" />
        </transformation>

        <!-- CandleFireBottom -->
        <transformation id = "CandleFireBottomTransformation">
            <translate x = "0" y = "1.65" z = "0" />
        </transformation>

        <!-- CandleFireTop -->
        <transformation id = "CandleFireTopTransformation">
            <translate x = "0" y = "1.65" z = "0" />
            <rotate axis = "x" angle = "-90" />
        </transformation>
        
        <!-- Candle -->
        <transformation id = "CandleTransformation">
            <translate x = "0" y = "0" z = "0" />
        </transformation>

        <!-- Transformations Matrixes to apply to fill the ceilling with candles -->

        <!-- FirstCandle -->
        <transformation id = "FirstCandleTransformation">
            <translate x = "-2" y = "-1" z = "2" />
        </transformation>

        <!-- SecondCandle -->
        <transformation id = "SecondCandleTransformation">
            <translate x = "-3" y = "2" z = "-2" />
        </transformation>

        <!-- ThirdCandle -->
        <transformation id = "ThirdCandleTransformation">
            <translate x = "3" y = "-1" z = "2" />
        </transformation>

        <!-- FourthCandle -->
        <transformation id = "FourthCandleTransformation">
            <translate x = "0" y = "1" z = "0" />
        </transformation>

        <!-- FifthCandle -->
        <transformation id = "FifthCandleTransformation">
            <translate x = "2" y = "2" z = "-1" />
        </transformation>

        <!-- GroupCandles -->
        <transformation id = "GroupCandlesTransformation">
            <translate x = "0" y = "0" z = "0" />
        </transformation>

        <!-- FirstGroupCandles -->
        <transformation id = "FirstGroupCandlesTransformation">
            <translate x = "0" y = "0" z = "0" />
        </transformation>

        <!-- SecondGroupCandles -->
        <transformation id = "SecondGroupCandlesTransformation">
            <translate x = "0" y = "0" z = "-14" />
        </transformation>

        <!-- ThirdGroupCandles -->
        <transformation id = "ThirdGroupCandlesTransformation">
            <translate x = "0" y = "0" z = "-7" />
        </transformation>

        <!-- FourthGroupCandles -->
        <transformation id = "FourthGroupCandlesTransformation">
            <translate x = "0" y = "0" z = "7" />
        </transformation>

        <!-- FifthGroupCandles -->
        <transformation id = "FifthGroupCandlesTransformation">
            <translate x = "0" y = "0" z = "14" />
        </transformation>

        <!-- SecondColumnCandles -->
        <transformation id = "SecondColumnCandlesTransformation">
            <translate x = "-14" y = "0" z = "0" />
        </transformation>

        <!-- ThirdColumnCandles -->
        <transformation id = "ThirdColumnCandlesTransformation">
            <translate x = "-7" y = "0" z = "0" />
        </transformation>

        <!-- FourthColumnCandles -->
        <transformation id = "FourthColumnCandlesTransformation">
            <translate x = "7" y = "0" z = "0" />
        </transformation>

        <!-- FifthColumnCandles -->
        <transformation id = "FifthColumnCandlesTransformation">
            <translate x = "14" y = "0" z = "0" />
        </transformation>

        <!-- AllCandles -->
        <transformation id = "AllCandlesTransformation">
            <translate x = "0" y = "20" z = "0" />
        </transformation>
        

    </transformations>


    <!--  PRIMITIVES TAG  -->
    <primitives>

        <primitive id = "UnitQuad">
            <rectangle x1 = "-0.5" y1 = "-0.5" x2 = "0.5" y2 = "0.5" />
        </primitive>

        <primitive id = "Cylinder">
            <cylinder base = "0.2" top = "0.2" height = "1.5" slices = "20" stacks = "10" />
        </primitive>

        <primitive id = "Sphere">
            <sphere radius = "0.1" slices = "20" stacks = "10" />
        </primitive>

        <primitive id = "Cone">
            <cylinder base = "0.1" top = "0.01" height = "0.5" slices = "20" stacks = "10" />
        </primitive>

    </primitives>

    <!--  COMPONENTS TAG  -->   
    <components>

        <!-- UNITARY CUBE -->

        <!-- Right Face -->
        <component id = "RightFace">
            <transformation>
                <transformationref id = "RightFaceTransformation" />
            </transformation>

            <children>
                <primitiveref id = "UnitQuad" />
            </children>
        </component>

        <!-- Left Face -->
        <component id = "LeftFace">
            <transformation>
                <transformationref id = "LeftFaceTransformation" />
            </transformation>

            <children>
                <primitiveref id = "UnitQuad" />
            </children>
        </component>

        <!-- Front Face -->
        <component id = "FrontFace">
            <transformation>
                <transformationref id = "FrontFaceTransformation" />
            </transformation>

            <children>
                <primitiveref id = "UnitQuad" />
            </children>
        </component>

        <!-- Back Face -->
        <component id = "BackFace">
            <transformation>
                <transformationref id = "BackFaceTransformation" />
            </transformation>

            <children>
                <primitiveref id = "UnitQuad" />
            </children>
        </component>

        <!-- Up Face -->
        <component id = "UpFace">
            <transformation>
                <transformationref id = "UpFaceTransformation" />
            </transformation>

            <children>
                <primitiveref id = "UnitQuad" />
            </children>
        </component>

        <!-- Down Face -->
        <component id = "DownFace">
            <transformation>
                <transformationref id = "DownFaceTransformation" />
            </transformation>

            <children>
                <primitiveref id = "UnitQuad" />
            </children>
        </component>

        <!-- Cube -->
        <component id = "Cube">
            <transformation>
                <transformationref id = "Identity" />
            </transformation>

            <children>
                <componentref id = "RightFace" />
                <componentref id = "LeftFace" />
                <componentref id = "FrontFace" />
                <componentref id = "BackFace" />
                <componentref id = "UpFace" />
                <componentref id = "DownFace" />
            </children>
        </component>


        <!-- LONG TABLE -->

        <!-- Top -->
        <component id = "Top">
            <transformation>
                <transformationref id = "TopTransformation" />
            </transformation>

            <children>
                <componentref id = "Cube" />
            </children>
        </component>

        <!-- LegBody -->
        <component id = "LegBody">
            <transformation>
                <transformationref id = "LegBodyTransformation" />
            </transformation>

            <children>
                <componentref id = "Cube" />
            </children>
        </component>

        <!-- LegBase -->
        <component id = "LegBase">
            <transformation>
                <transformationref id = "LegBaseTransformation" />
            </transformation>

            <children>
                <componentref id = "Cube" />
            </children>
        </component>

        <!-- Leg -->
        <component id = "Leg">
            <transformation>
                <transformationref id = "Identity" />
            </transformation>

            <children>
                <componentref id = "LegBody" />
                <componentref id = "LegBase" />
            </children>
        </component>

        <!-- Front Leg -->
        <component id = "FrontLeg">
            <transformation>
                <transformationref id = "FrontLegTransformation" />
            </transformation>

            <children>
                <componentref id = "Leg" />
            </children>
        </component>

        <!-- Back Leg -->
        <component id = "BackLeg">
            <transformation>
                <transformationref id = "BackLegTransformation" />
            </transformation>

            <children>
                <componentref id = "Leg" />
            </children>
        </component>

        <!-- Beam -->
        <component id = "Beam">
            <transformation>
                <transformationref id = "BeamTransformation" />
            </transformation>

            <children>
                <componentref id = "Cube" />
            </children>
        </component>

        <!-- Table -->
        <component id = "Table">
            <transformation>
                <transformationref id = "Identity" />
            </transformation>

            <children>
                <componentref id = "Top" />
                <componentref id = "FrontLeg" />
                <componentref id = "BackLeg" />
                <componentref id = "Beam" />
            </children>
        </component>

        <!-- Front Table -->
        <component id = "FrontTable">
            <transformation>
                <transformationref id = "FrontTableTransformation" />
            </transformation>

            <children>
                <componentref id = "Table" />
            </children>
        </component>

        <!-- Midle Table -->
        <component id = "MidleTable">
            <transformation>
                <transformationref id = "Identity" />
            </transformation>

            <children>
                <componentref id = "Table" />
            </children>
        </component>

        <!-- Back Table -->
        <component id = "BackTable">
            <transformation>
                <transformationref id = "BackTableTransformation" />
            </transformation>

            <children>
                <componentref id = "Table" />
            </children>
        </component>

        <!-- Long Table -->
        <component id = "LongTable">
            <transformation>
                <transformationref id = "Identity" />
            </transformation>

            <children>
                <componentref id = "FrontTable" />
                <componentref id = "MidleTable" />
                <componentref id = "BackTable" />
            </children>
        </component>

        <!-- CANDLE -->

        <!-- CandleBody -->
        <component id = "CandleBody">
            <transformation>
                <transformationref id = "CandleBodyTransformation" />
            </transformation>

            <children>
                <primitiveref id = "Cylinder" />
            </children>
        </component>

        <!-- CandleFireBottom -->
        <component id = "CandleFireBottom">
            <transformation>
                <transformationref id = "CandleFireBottomTransformation" />
            </transformation>

            <children>
                <primitiveref id = "Sphere" />
            </children>
        </component>

        <!-- CandleFireTop -->
        <component id = "CandleFireTop">
            <transformation>
                <transformationref id = "CandleFireTopTransformation" />
            </transformation>

            <children>
                <primitiveref id = "Cone" />
            </children>
        </component>

        <!-- Fire -->

        <!-- Candle -->
        <component id = "Candle">
            <transformation>
                <transformationref id = "CandleTransformation" />
            </transformation>

            <children>
                <componentref id = "CandleBody" />
                <componentref id = "CandleFireBottom" />
                <componentref id = "CandleFireTop" />
            </children>
        </component>

        <!-- ALL CANDLES -->

        <!-- First Candle -->
        <component id = "FirstCandle">
            <transformation>
                <transformationref id = "FirstCandleTransformation" />
            </transformation>

            <children>
                <componentref id = "Candle" />
            </children>
        </component>


        <!-- Second Candle -->
        <component id = "SecondCandle">
            <transformation>
                <transformationref id = "SecondCandleTransformation" />
            </transformation>

            <children>
                <componentref id = "Candle" />
            </children>
        </component>

        <!-- Third Candle -->
        <component id = "ThirdCandle">
            <transformation>
                <transformationref id = "ThirdCandleTransformation" />
            </transformation>

            <children>
                <componentref id = "Candle" />
            </children>
        </component>

        <!-- Fourth Candle -->
        <component id = "FourthCandle">
            <transformation>
                <transformationref id = "FourthCandleTransformation" />
            </transformation>

            <children>
                <componentref id = "Candle" />
            </children>
        </component>

        <!-- Fifth Candle-->
        <component id = "FifthCandle">
            <transformation>
                <transformationref id = "FifthCandleTransformation" />
            </transformation>

            <children>
                <componentref id = "Candle" />
            </children>
        </component>

        <!-- Group Candles -->
        <component id = "GroupCandles">
            <transformation>
                <transformationref id = "Identity" />
            </transformation>

            <children>
                <componentref id = "FirstCandle" />
                <componentref id = "SecondCandle" />
                <componentref id = "ThirdCandle" />
                <componentref id = "FourthCandle" />
                <componentref id = "FifthCandle" />
            </children>
        </component>

        <!-- First Group Candles -->
        <component id = "FirstGroupCandles">
            <transformation>
                <transformationref id = "Identity" />
            </transformation>

            <children>
                <componentref id = "GroupCandles" />
            </children>
        </component>

        <!-- Second Group Candles -->
        <component id = "SecondGroupCandles">
            <transformation>
                <transformationref id = "SecondGroupCandlesTransformation" />
            </transformation>

            <children>
                <componentref id = "GroupCandles" />
            </children>
        </component>

        <!-- Third Group Candles -->
        <component id = "ThirdGroupCandles">
            <transformation>
                <transformationref id = "ThirdGroupCandlesTransformation" />
            </transformation>

            <children>
                <componentref id = "GroupCandles" />
            </children>
        </component>

        <!-- Fourth Group Candles -->
        <component id = "FourthGroupCandles">
            <transformation>
                <transformationref id = "FourthGroupCandlesTransformation" />
            </transformation>

            <children>
                <componentref id = "GroupCandles" />
            </children>
        </component>

        <!-- Fifth Group Candles -->
        <component id = "FifthGroupCandles">
            <transformation>
                <transformationref id = "FifthGroupCandlesTransformation" />
            </transformation>

            <children>
                <componentref id = "GroupCandles" />
            </children>
        </component>

        <!-- Column Candles -->
        <component id = "ColumnCandles">
            <transformation>
                <transformationref id = "Identity" />
            </transformation>

            <materials>
                <material id = "default" />
            </materials>

            <children>
                <componentref id = "FirstGroupCandles" />
                <componentref id = "SecondGroupCandles" />
                <componentref id = "ThirdGroupCandles" />
                <componentref id = "FourthGroupCandles" />
                <componentref id = "FifthGroupCandles" />
            </children>
        </component>

        <!-- First Column Candles -->
        <component id = "FirstColumnCandles">
            <transformation>
                <transformationref id = "Identity" />
            </transformation>

            <materials>
                <material id = "default" />
            </materials>

            <children>
                <componentref id = "ColumnCandles" />
            </children>
        </component>

        <!-- Second Column Candles -->
        <component id = "SecondColumnCandles">
            <transformation>
                <transformationref id = "SecondColumnCandlesTransformation" />
            </transformation>

            <materials>
                <material id = "default" />
            </materials>

            <children>
                <componentref id = "ColumnCandles" />
            </children>
        </component>

        <!-- Third Column Candles -->
        <component id = "ThirdColumnCandles">
            <transformation>
                <transformationref id = "ThirdColumnCandlesTransformation" />
            </transformation>

            <materials>
                <material id = "default" />
            </materials>

            <children>
                <componentref id = "ColumnCandles" />
            </children>
        </component>

        <!-- Fourth Column Candles -->
        <component id = "FourthColumnCandles">
            <transformation>
                <transformationref id = "FourthColumnCandlesTransformation" />
            </transformation>

            <materials>
                <material id = "default" />
            </materials>

            <children>
                <componentref id = "ColumnCandles" />
            </children>
        </component>

        <!-- Fifth Column Candles -->
        <component id = "FifthColumnCandles">
            <transformation>
                <transformationref id = "FifthColumnCandlesTransformation" />
            </transformation>

            <materials>
                <material id = "default" />
            </materials>

            <children>
                <componentref id = "ColumnCandles" />
            </children>
        </component>

        <!-- All Candles -->
        <component id = "AllCandles">
            <transformation>
                <transformationref id = "AllCandlesTransformation" />
            </transformation>

            <materials>
                <material id = "default" />
            </materials>

            <children>
                <componentref id = "FirstColumnCandles" />
                <componentref id = "SecondColumnCandles" />
                <componentref id = "ThirdColumnCandles" />
                <componentref id = "FourthColumnCandles" />
                <componentref id = "FifthColumnCandles" />
            </children>
        </component>

        <!-- GREAT HALL -->

        <!-- Gryffindor Table -->
        <component id = "GryffindorTable">
            <transformation>
                <transformationref id = "GryffindorTableTransformation" />
            </transformation>

            <materials>
                <material id = "default" />
            </materials>

            <children>
                <componentref id = "LongTable" />
            </children>
        </component>

        <!-- Slytherin Table -->
        <component id = "SlytherinTable">
            <transformation>
                <transformationref id = "SlytherinTableTransformation" />
            </transformation>

            <materials>
                <material id = "default" />
            </materials>

            <children>
                <componentref id = "LongTable" />
            </children>
        </component>

        <!-- Ravenclaw Table -->
        <component id = "RavenclawTable">
            <transformation>
                <transformationref id = "RavenclawTableTransformation" />
            </transformation>

            <materials>
                <material id = "default" />
            </materials>

            <children>
                <componentref id = "LongTable" />
            </children>
        </component>

        <!-- Hufflepuff Table -->
        <component id = "HufflepuffTable">
            <transformation>
                <transformationref id = "HufflepuffTableTransformation" />
            </transformation>

            <materials>
                <material id = "default" />
            </materials>

            <children>
                <componentref id = "LongTable" />
            </children>
        </component>

        <!-- Geat hall -->
        <component id = "GreatHall">
            <transformation>
                <transformationref id = "Identity" />
            </transformation>

            <materials>
                <material id = "default" />
            </materials>

            <children>
                <componentref id = "GryffindorTable" />
                <componentref id = "SlytherinTable" />
                <componentref id = "RavenclawTable" />
                <componentref id = "HufflepuffTable" />

                <componentref id = "AllCandles" />
            </children>
        </component>


    </components>

</yas>